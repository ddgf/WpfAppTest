<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Publish settings -->
    <PublishUrl>\\server\path\to\publish\</PublishUrl>
    <InstallUrl>https://yourdomain.com/appname/</InstallUrl>
    <ApplicationRevision>1</ApplicationRevision>
    <ApplicationVersion>1.0.0.%2a</ApplicationVersion>
    <IsWebBootstrapper>true</IsWebBootstrapper>
    
    <!-- Security and trust -->
    <PublishState>Release</PublishState>
    <PublishWizardCompleted>true</PublishWizardCompleted>
    <Install>true</Install>
    <UpdateEnabled>true</UpdateEnabled>
    <UpdateMode>Foreground</UpdateMode>
    <UpdateInterval>7</UpdateInterval>
    <UpdateIntervalUnits>Days</UpdateIntervalUnits>
    <UpdateRequired>true</UpdateRequired>
    <MinimumRequiredVersion>1.0.0.0</MinimumRequiredVersion>

    <!-- Deployment settings -->
    <MapFileExtensions>true</MapFileExtensions>
    <InstallFrom>Web</InstallFrom>
    <UpdateFrom>Web</UpdateFrom>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishComponents>true</PublishComponents>

    <!-- Certificate -->
    <ManifestCertificateThumbprint>YOUR_CERTIFICATE_THUMBPRINT</ManifestCertificateThumbprint>
    <ManifestKeyFile>path\to\certificate.pfx</ManifestKeyFile>
    <ManifestKeyPassword>your_password</ManifestKeyPassword>
  </PropertyGroup>
</Project>
